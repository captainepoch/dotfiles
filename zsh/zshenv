# Go env.
export GOPATH="$HOME/Projects/go"
export GOPATH_BIN="$GOPATH/bin"

case $(uname -s) in
	"Linux")
		CORE_PERL="/usr/bin/core_perl"
		AND_PLATOOLS="/opt/android-sdk/platform-tools"
		AND_TOOLS="/opt/android-sdk/tools"

		export PATH="$PATH:$CORE_PERL:$AND_PLATOOLS:$AND_TOOLS"
		;;
	"Darwin")
		SBIN_PATH="/usr/local/sbin"
		LATEX_PATH="/Library/TeX/texbin"
		CODE_PATH="/Applications/VSCodium.app/Contents/Resources/app/bin"

		BREW_OPENSSL="/usr/local/opt/openssl@1.1/bin"

		# Mutt charset
		export LC_ALL=es_ES.UTF-8

		export PATH="$PATH:$SBIN_PATH:$BREW_OPENSSL:$LATEX_PATH:$CODE_PATH"
		;;
esac

DOTFILES_BIN="$HOME/.dotfiles/bin"

export PATH="$PATH:$GOPATH:$GOPATH_BIN:$DOTFILES_BIN"

fpath+=~/.zfunc
