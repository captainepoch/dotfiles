{
  // Editor
  "editor.fontFamily": "'Liberation Mono', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 12,
  "editor.rulers": [80, 100],
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": false,
  "editor.detectIndentation": true,
  // Python
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.pep8Enabled": true,
  "python.formatting.provider": "autopep8",
  "python.linting.lintOnSave": true,
  "python.venvPath": "~/Projects/PyVenv",
  // C(++)
  "C_Cpp.formatting": "Disabled",
  "astyle.astylerc": "${workspaceRoot}/.vscode/astylerc",
  // Other
  "files.eol": "\n",
  "rewrap.autoWrap.enabled": true,
  "files.trimTrailingWhitespace": true,
  "telemetry.enableTelemetry": false,
  "breadcrumbs.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "python.pythonPath": "/Users/Adolfo/Projects/PyVenv/pythonenv/bin/python",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false
}
