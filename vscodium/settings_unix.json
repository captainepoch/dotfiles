{
	"accessibility.signals.terminalBell": {
		"sound": "off"
	},
	"chat.commandCenter.enabled": false,
	// DiffEditor
	"diffEditor.codeLens": false,
	"diffEditor.hideUnchangedRegions.enabled": true,
	"diffEditor.renderSideBySide": true,
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.maxComputationTime": 0,
	"diffEditor.renderIndicators": true,
	// Editor
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingDelete": "auto",
	"editor.autoClosingOvertype": "auto",
	"editor.bracketPairColorization.enabled": false,
	"editor.comments.insertSpace": false,
	"editor.detectIndentation": true,
	"editor.insertSpaces": false,
	"editor.fontFamily": "Literation Mono Nerd Font",
	"editor.fontLigatures": false,
	"editor.fontSize": 13,
	"editor.formatOnSave": false,
	"editor.lineNumbers": "on",
	"editor.matchBrackets": "always",
	"editor.renderWhitespace": "none",
	"editor.rulers": [
		80,
		100
	],
	"editor.scrollBeyondLastLine": false,
	"editor.suggestSelection": "first",
	"editor.tabSize": 4,
	"editor.trimAutoWhitespace": true,
	"editor.tokenColorCustomizations": {
		"[Default Light+]": {
			"textMateRules": [
				{
					"scope": [
						"keyword.control",
						"source.cpp keyword.operator.new",
						"source.cpp keyword.operator.delete",
						"keyword.other.using",
						"keyword.other.directive.using",
						"keyword.other.operator",
						"entity.name.operator"
					],
					"settings": {
						"foreground": "#660E7A"
					}
				},
				{
					"scope": "entity.other.attribute-name",
					"settings": {
						"foreground": "#a31515"
					}
				},
				{
					"scope": [
						"meta.preprocessor",
						"entity.name.function.preprocessor"
					],
					"settings": {
						"foreground": "#000080"
					}
				},
				{
					"scope": "constant.language",
					"settings": {
						"foreground": "#000080"
					}
				},
				{
					"scope": "storage",
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": "storage.type",
					"settings": {
						"foreground": "#000080"
					}
				},
				{
					"scope": [
						"storage.modifier",
						"keyword.operator.noexcept"
					],
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": [
						"keyword.operator.new",
						"keyword.operator.expression",
						"keyword.operator.cast",
						"keyword.operator.sizeof",
						"keyword.operator.alignof",
						"keyword.operator.typeid",
						"keyword.operator.alignas",
						"keyword.operator.instanceof",
						"keyword.operator.logical.python",
						"keyword.operator.wordlike"
					],
					"settings": {
						"foreground": "#000080"
					}
				},
				{
					"scope": [
						"string.comment.buffered.block.pug",
						"string.quoted.pug",
						"string.interpolated.pug",
						"string.unquoted.plain.in.yaml",
						"string.unquoted.plain.out.yaml",
						"string.unquoted.block.yaml",
						"string.quoted.single.yaml",
						"string.quoted.double.xml",
						"string.quoted.single.xml",
						"string.unquoted.cdata.xml",
						"string.quoted.double.html",
						"string.quoted.single.html",
						"string.unquoted.html",
						"string.quoted.single.handlebars",
						"string.quoted.double.handlebars"
					],
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"name": "String interpolation",
					"scope": [
						"punctuation.definition.template-expression.begin",
						"punctuation.definition.template-expression.end",
						"punctuation.section.embedded"
					],
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": [
						"support.type.vendored.property-name",
						"support.type.property-name",
						"variable.css",
						"variable.scss",
						"variable.other.less",
						"source.coffee.embedded"
					],
					"settings": {
						"foreground": "#a31515"
					}
				},
				{
					"scope": "keyword",
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": "keyword.control",
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": [
						"keyword.operator.or.regexp",
						"keyword.control.anchor.regexp"
					],
					"settings": {
						"foreground": "#a31515"
					}
				},
				{
					"scope": [
						"constant.character",
						"constant.other.option"
					],
					"settings": {
						"foreground": "#0451a5"
					}
				},
				{
					"scope": "constant.character.escape",
					"settings": {
						"foreground": "#a31515"
					}
				},
			]
		},
		"textMateRules": [
			{
				"scope": "keyword.control",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "storage",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "constant.language",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "support.class.builtin",
				"settings": {
					"fontStyle": "bold"
				}
			}
		]
	},
	"editor.wordWrap": "wordWrapColumn",
	"editor.wordWrapColumn": 80,
	"extensions.autoUpdate": false,
	"extensions.autoCheckUpdates": false,
	"extensions.ignoreRecommendations": true,
	"files.encoding": "utf8",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"git.confirmSync": false,
	"git.openRepositoryInParentFolders": "always",
	"problems.defaultViewMode": "table",
	"rewrap.autoWrap.enabled": true,
	"terminal.integrated.enableVisualBell": false,
	"window.restoreWindows": "none",
	"window.title": "${rootPath}",
	"workbench.colorTheme": "Default Light+",
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.enablePreview": false,
	"workbench.enableExperiments": false,
	"workbench.layoutControl.enabled": false,
	"workbench.localHistory.enabled": false,
	"workbench.preferredDarkColorTheme": "Default Dark+",
	"workbench.preferredLightColorTheme": "Default Light+",
	"workbench.settings.enableNaturalLanguageSearch": false,
	"workbench.startupEditor": "none",
	// HTML
	"html.autoClosingTags": true,
	"html.completion.attributeDefaultValue": "doublequotes",
	"html.format.contentUnformatted": "pre",
	"html.format.wrapAttributes": "force-aligned",
	"html.suggest.html5": true,
	"html.validate.scripts": true,
	"html.validate.styles": true,
	// Go
	"gopls": {
		"ui.completion.usePlaceholders": true,
		"ui.semanticTokens": true
	},
	"go.formatTool": "gofmt",
	"go.lintTool": "golint",
	"go.useLanguageServer": true,
	// Python
	"autopep8.importStrategy": "fromEnvironment",
	"flake8.args": [
		"--jobs=2",
		"--ignore=ANN201",
		"--verbose"
	],
	"flake8.importStrategy": "fromEnvironment",
	"python.languageServer": "Jedi",
	"python.venvFolders": [
		"~/Projects/PyVenv",
		"~/.local/share/virtualenvs"
	],
	"python.venvPath": "${workspaceFolderBasename}",
	// C(++)
	"astyle.c.enable": false,
	"astyle.cpp.enable": false,
	"astyle.astylerc": "${workspaceFolderBasename}/.vscode/astylerc",
	// Other
	"breadcrumbs.enabled": false,
	"editor.experimental.treeSitterTelemetry": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"direnv.restart.automatic": true,
	"npm.fetchOnlinePackageInfo": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"update.mode": "none",
	// Formaters
	"[c]": {
		"editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
		"editor.insertSpaces": true,
		"editor.tabSize": 4
	},
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format",
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 4
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.suggest.insertMode": "replace",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[git-commit]": {
		"editor.rulers": [
			50,
			72
		]
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[jinja-html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[markdown]": {
		"editor.formatOnSave": true,
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		}
	},
	"[nix]": {
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.autopep8",
		"editor.formatOnSave": true,
		"editor.insertSpaces": true
	},
	"sass.format.enabled": false,
	"[scminput]": {
		"editor.rulers": [
			50,
			72
		],
		"editor.wordWrap": "off"
	},
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features",
		"editor.formatOnSave": true,
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[yaml]": {
		"editor.autoIndent": "advanced",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	}
}
