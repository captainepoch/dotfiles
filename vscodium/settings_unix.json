{
	// DiffEditor
	"diffEditor.codeLens": false,
	"diffEditor.renderSideBySide": true,
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.maxComputationTime": 0,
	"diffEditor.renderIndicators": true,
	// Editor
	"editor.autoClosingBrackets": "always",
	"editor.autoClosingDelete": "auto",
	"editor.autoClosingOvertype": "auto",
	"editor.bracketPairColorization.enabled": false,
	"editor.comments.insertSpace": false,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.fontFamily": "Liberation Mono",
	"editor.fontLigatures": false,
	"editor.fontSize": 13,
	"editor.formatOnSave": true,
	"editor.lineNumbers": "on",
	"editor.matchBrackets": "always",
	"editor.rulers": [
		80,
		100
	],
	"editor.scrollBeyondLastLine": false,
	"editor.suggestSelection": "first",
	"editor.tabSize": 4,
	"editor.trimAutoWhitespace": true,
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": "keyword",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "storage",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "constant.language",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "support.class.builtin",
				"settings": {
					"fontStyle": "bold"
				}
			},
			{
				"scope": "meta.function",
				"settings": {
					"fontStyle": "bold"
				}
			}
		]
	},
	"editor.wordWrap": "wordWrapColumn",
	"editor.wordWrapColumn": 80,
	"extensions.ignoreRecommendations": true,
	"files.encoding": "utf8",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"problems.defaultViewMode": "table",
	"rewrap.autoWrap.enabled": true,
	"window.restoreWindows": "none",
	"window.title": "${rootPath}",
	"workbench.colorTheme": "Default Light+",
	"workbench.editor.enablePreview": false,
	"workbench.editor.untitled.hint": "hidden",
	"workbench.enableExperiments": false,
	"workbench.fontAliasing": "antialiased",
	"workbench.layoutControl.enabled": false,
	"workbench.localHistory.enabled": false,
	"workbench.startupEditor": "none",
	"workbench.settings.enableNaturalLanguageSearch": false,
	// HTML
	"html.autoClosingTags": true,
	"html.completion.attributeDefaultValue": "doublequotes",
	"html.format.contentUnformatted": "pre",
	"html.format.wrapAttributes": "force-aligned",
	"html.suggest.html5": true,
	"html.validate.scripts": true,
	"html.validate.styles": true,
	// Go
	"go.autocompleteUnimportedPackages": true,
	"go.docsTool": "godoc",
	"go.formatTool": "gofmt",
	"go.gopath": "~/Projects/go",
	"go.lintTool": "golint",
	"go.useCodeSnippetsOnFunctionSuggest": true,
	// Python
	"python.formatting.provider": "autopep8",
	"python.languageServer": "Jedi",
	"python.linting.enabled": true,
	"python.linting.flake8Args": [
		"--jobs=2",
		"--ignore=ANN201",
		"--verbose"
	],
	"python.linting.flake8Enabled": true,
	"python.linting.lintOnSave": true,
	"python.linting.pydocstyleEnabled": true,
	"python.linting.pylintEnabled": false,
	"python.venvFolders": [
		"~/Projects/PyVenv",
		"~/.pyenv/versions"
	],
	"python.venvPath": "${workspaceFolderBasename}",
	// C(++)
	"astyle.astylerc": "${workspaceFolderBasename}/codestyle/astylerc",
	"C_Cpp.formatting": "Disabled",
	// Other
	"breadcrumbs.enabled": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"npm.fetchOnlinePackageInfo": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"update.mode": "none",
	// Formaters
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.suggest.insertMode": "replace",
		"editor.tabSize": 2
	},
	"[git-commit]": {
		"editor.rulers": [
			72
		]
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},
	"[jinja-html]": {
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"editor.insertSpaces": false,
		"editor.tabSize": 2
	},
	"[markdown]": {
		"editor.formatOnSave": true,
		"editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		}
	},
	"[python]": {
		"editor.formatOnSave": true,
		"editor.insertSpaces": true
	},
	"sass.format.enabled": false,
	"[yaml]": {
		"editor.autoIndent": "advanced",
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	}
}
